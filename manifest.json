{
  "name": "Mute",
  "version": "0.01",
  "manifest_version": 2,

  "description": "Blacklist extension",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "blocked.html",
    "default_title": "Mute"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["mute.js"]
    }
  ],

  "web_accessible_resources": [
    "blocked.html"
  ],

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}